@model IEnumerable<string>
@{
    ViewData["Title"] = "Image";
}
<h1>
    Images
</h1>
@foreach (var item in Model)
{

    <img src="~/images/@item" style="width:100px; height:100px;  border:1px solid red;" />
    <h3>@item</h3>

}
<br />
@{
    if (Model.Count() > 0)
    {
        <h1>Image Delete</h1>
        <form asp-action="ImageDelete" enctype="multipart/form-data">

            <input type="text" name="name" />

            <button type="submit">Delete Image</button>
        </form>
    }

}

<br />
<h1>Image Save</h1>
<form asp-action="ImageSave" enctype="multipart/form-data">

    <input type="file" name="imageFile" />

    <button type="submit">Save Image</button>
</form>

